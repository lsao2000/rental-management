<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:id="@+id/secondWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/brand2"
            android:textSize="60sp"
            android:fontFamily="@font/baloo"
            android:alpha="1"
            android:layout_alignStart="@id/firstWord"
            android:layout_above="@id/firstWord"
            android:layout_centerHorizontal="true"
    />
    <TextView
            android:id="@+id/firstWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/brand1"
            android:fontFamily="@font/baloo"
            android:textSize="60sp"
            android:alpha="1"
            android:layout_marginTop="-20dp"
            android:layout_centerHorizontal="true"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developped By Lahcen"
            android:textColor="@color/developer"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
    />
</RelativeLayout>


































